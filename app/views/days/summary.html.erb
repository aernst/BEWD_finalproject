          <td class="col-md-2"><%= link_to 'Show', week %> |
          <%= link_to 'Edit', edit_week_path(week) %> |
          <%= link_to 'Delete', week, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

    </tbody>
  </table>

  <br>
<% end %>
<%= link_to 'New Task - Week', new_week_path, :class => "btn btn-primary"  %>
<%= link_to 'See more Tasks'.html_safe, weeks_path, {:style=>'float:right;'}  %>
</div>

