<h1>Summary <small>As of: <%= Date.today %></small></h1>

<div class="col-md-6" style="padding-left: 0px;">

<%= form_tag "/", method: "Get" do %>
  <%= text_field_tag :q %>
  <%= submit_tag "Search" %>
<% end %>

<h5><u>Tasks by Day</u></h5> 
<% if @thisweek.length > 1  %>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Task(s)</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @days.order("date desc").limit(7).each do |day| %>
      <tr>
        <td class="col-md-1"><%= day.date %></td>
        <td class="col-md-3"><%= day.task %></td>
        <td class="col-md-2"><%= link_to 'Show', day %> | 
        <%= link_to 'Edit', edit_day_path(day) %> | 
        <%= link_to 'Delete', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task - Day', new_day_path, :class => "btn btn-primary" %> 
<%= link_to 'See more Tasks'.html_safe, days_path, {:style=>'float:right;'}  %>
</div>
