<%= form_for(@quarter) do |f| %>
  <% if @quarter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quarter.errors.count, "error") %> prohibited this quarter from being saved:</h2>

      <ul>
      <% @quarter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<p>
    <%= Time.now %>
</p>

<!--   <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div> -->
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date,  :value => Time.now %>
  </div>
  <div class="field">
    <%= f.label :quarter_num %><br>
    <%= f.number_field :quarter_num, :value => ((Time.now.month - 1) / 3) + 1 %>
  </div>
  <div class="field">
    <%= f.label :task %><br>
    <%= f.text_area :task, :size => "60x10" %>
  </div>
  <div class="field">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

