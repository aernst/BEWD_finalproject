  </div> -->
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, :value => Time.now %>
  </div>
  <div class="field">
    <%= f.label :week_num %><br>
    <%= f.number_field :week_num, :value => Date.today.strftime("%U").to_i %>
  </div>
  <div class="field">
    <%= f.label :task %><br>
    <%= f.text_area :task, :size => "60x10" %>
  </div>
   <div class="field" type="checkbox">
    <%= f.label :completed %> <span>  </span>
    <%= f.check_box :completed %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
